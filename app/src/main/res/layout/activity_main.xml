<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.quizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <TextView
            style="@style/question_textviews"
            android:text="In which year did the U.S. gain its independence?"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                style="@style/radio_buttons"
                android:id="@+id/q_one_a"
                android:text="1776"
                android:layout_marginTop="10dp"
                android:onClick="questionOneAnswered"/>

            <RadioButton
                style="@style/radio_buttons"
                android:id="@+id/q_one_b"
                android:text="1456"
                android:layout_marginTop="2dp"
                android:onClick="questionOneAnswered"/>

            <RadioButton
                style="@style/radio_buttons"
                android:id="@+id/q_one_c"
                android:layout_marginTop="2dp"
                android:onClick="questionOneAnswered"/>

            <RadioButton
                style="@style/radio_buttons"
                android:id="@+id/q_one_d"
                android:layout_marginTop="2dp"
                android:onClick="questionOneAnswered"/>
        </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:onClick="submitAnswersTapped"
            android:text="Submit"/>
    </RelativeLayout>

    </LinearLayout>

</LinearLayout>
